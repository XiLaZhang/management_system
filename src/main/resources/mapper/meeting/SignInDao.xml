<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.meeting.dao.SignInDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.meeting.entity.SignInEntity" id="signInMap">
        <result property="id" column="id"/>
        <result property="uuid" column="UUID"/>
    </resultMap>

    <select id="isSignIn" resultType="Boolean">
        select UUID from sign_in where id = #{id}
    </select>
</mapper>